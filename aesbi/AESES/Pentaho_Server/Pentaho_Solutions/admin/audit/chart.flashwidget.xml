<chart>
	
	<chart-type>BarChart</chart-type>
	<title></title>

	<data>
		<data-solution></data-solution>
		<data-path>/public/pentaho-solutions/admin/audit/audit1.xaction</data-path>
		<data-action></data-action>
		<data-output>query-result</data-output>
		<data-orientation>columns</data-orientation>
		<data-orientation>columns</data-orientation>
	</data>

	<template>
	<chart>
    	<background-color>#445544</background-color>
	<axis_category font='arial' bold='true' size='12' color='555555' alpha='100' skip='0' />
	<axis_ticks value_ticks='true' category_ticks='true' major_thickness='2' minor_thickness='1' minor_count='1' major_color='222222' minor_color='222222' position='centered' />
	<axis_value font='arial' bold='true' size='10' color='555555' alpha='100' steps='6' prefix='' suffix='' decimals='0' separator='' show_min='true' />

	<chart_border color='000000' top_thickness='1' bottom_thickness='1' left_thickness='3' right_thickness='1' />
	<chart_data>
		{data}
	</chart_data>
	<chart_grid_h alpha='20' color='000000' thickness='1' type='dashed' />
	<chart_grid_v alpha='20' color='000000' thickness='1' />
	<chart_rect x='400' y='10' width='500' height='430' positive_color='ffffff' negative_color='ff0000' positive_alpha='35' negative_alpha='10' />
	<chart_transition type='scale' delay='.1' duration='.1' order='series' />
	<chart_type>column</chart_type>
	<chart_value color='ffffff' alpha='50' font='arial' bold='true' size='10' position='center' prefix='' suffix='' decimals='0' separator='' as_percentage='false' />

	<legend_rect x='400' y='450' width='500' height='50' />

	<series_color>
		<color>4e627c</color>
		<color>c89341</color>
		<color>4c6b41</color>
	</series_color>

	<link_data url='{drill-url}' target='javascript' />

	</chart>
	
	</template>

</chart>